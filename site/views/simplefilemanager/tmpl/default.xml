<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_SIMPLEFILEMANAGER_TITLE_FORM_VIEW_SIMPLEFILEMANAGER" option="COM_SIMPLEFILEMANAGER_TITLE_FORM_VIEW_SIMPLEFILEMANAGER">
        <message>
                        <![CDATA[COM_SIMPLEFILEMANAGER_TITLE_FORM_VIEW_SIMPLEFILEMANAGER_DESC]]>
        </message>
    </layout>
    
    <fields name="request">
		<fieldset name="request">
			<field
				name="id"
				type="sql"
				class="inputbox"
				required="true"
				label="COM_SIMPLEFILEMANAGER_FIELD_FILE_LABEL"
				query="SELECT id, title FROM #__simplefilemanager" key_field="id" value_field="title" />
			<field
				name="showDate"
				type="list"
				label="COM_SIMPLEFILEMANAGER_FIELD_SHOWDATE_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field
				name="showNew"
				type="list"
				label="COM_SIMPLEFILEMANAGER_FIELD_SHOWNEW_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field
				name="showSize"
				type="list"
				label="COM_SIMPLEFILEMANAGER_FIELD_SHOWSIZE_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>			
			<field
				name="showDesc"
				type="list"
				label="COM_SIMPLEFILEMANAGER_FIELD_SHOWDESC_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field
				name="showIcon"
				type="list"
				label="COM_SIMPLEFILEMANAGER_FIELD_SHOWICON_LABEL"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="showAuth" type="list" label="COM_SIMPLEFILEMANAGER_FIELD_SHOW_AUTHOR_LABEL" description="">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="showMD5" type="list" label="COM_SIMPLEFILEMANAGER_FIELD_SHOW_MD5_LABEL" description="">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="showLicence" type="list" label="COM_SIMPLEFILEMANAGER_FIELD_SHOW_LICENCE_LABEL" description="">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field
				name="orderBy"
				type="list"
				default="a.ordering"
				label="COM_SIMPLEFILEMANAGER_FIELD_ORDERBY_LABEL"
			>
				<option value="a.ordering">JFIELD_ORDERING_LABEL</option>
				<option value="a.file_created">COM_SIMPLEFILEMANAGER_HEADING_CREATED</option>
				<option value="a.title">COM_SIMPLEFILEMANAGER_HEADING_TITLE</option>
				<option value="a.file_size">COM_SIMPLEFILEMANAGER_HEADING_SIZE</option>
			</field>
			<field
				name="order"
				type="list"
				default="ASC"
				label="COM_SIMPLEFILEMANAGER_FIELD_ORDER_LABEL"
			>
				<option value="ASC">JGLOBAL_ORDER_ASCENDING</option>
				<option value="DESC">JGLOBAL_ORDER_DESCENDING</option>
			</field>

			<field type="spacer" name="spacer" hr="true" />

		</fieldset>
	</fields>
</metadata>
